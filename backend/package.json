  "scripts": {
    "lint": "eslint src --ext js,ts --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-ts": "tsc",
    "build-babel": "babel ./src -d ./build/src --extensions \".js,.ts\"",
    "build": "npm run clean && npm run build-ts && npm run build-babel",
    "production": "npm run build && node ./build/src/server.ts",
    "dev": "nodemon --exec babel-node ./src/server.ts --extensions \".js,.ts\""
  },
